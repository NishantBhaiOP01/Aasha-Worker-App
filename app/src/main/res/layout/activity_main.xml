<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/pink_50"
        app:title="ASHA Data Entry"
        app:titleCentered="true"
        app:titleTextColor="@color/pink_700"
        app:layout_scrollFlags="scroll|enterAlways" />

    <ScrollView
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Item Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/pink_700"/>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_widget_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="  Widget Name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_widget_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:drawableStart="@drawable/ic_medical" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_household"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="  Household ID">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_household"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:drawableStart="@drawable/ic_home" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Beneficiary Details -->
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beneficiary Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/pink_700"/>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_benef_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="  Beneficiary Name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_benef_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:drawableStart="@drawable/ic_person" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_benef_age"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Beneficiary Age">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_benef_age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beneficiary Sex"
                        android:textSize="15sp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupSex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:singleSelection="true"
                        app:chipSpacing="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_male"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            app:chipIcon="@drawable/ic_male"
                            app:chipIconTint="@color/pink_700"
                            app:checkedIconVisible="false"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_female"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            app:chipIcon="@drawable/ic_female"
                            app:chipIconTint="@color/pink_700"
                            app:checkedIconVisible="false"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_other"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other"
                            app:chipIcon="@drawable/ic_transgender"
                            app:chipIconTint="@color/pink_700"
                            app:checkedIconVisible="false"/>

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Distribution & Follow-up -->
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distribution &amp; Follow-up"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/pink_700"/>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Distribution Date">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_distribution_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:drawableStart="@drawable/ic_calendar" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Follow-up Date">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_followup_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:drawableStart="@drawable/ic_calendar" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_handed"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Widget Handed Over" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_used_correctly"
                        android:layout_marginTop="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Widget Used Correctly"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Observed Outcome & Notes -->
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observed Outcome &amp; Notes"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/pink_700"/>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Observed Outcome"
                        android:textSize="15sp"/>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_rating"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="1"
                        android:valueTo="5"
                        android:stepSize="1"
                        app:labelBehavior="visible"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Additional Notes">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_notes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="3"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Submit Data"
                style="@style/Widget.AshaData.Button"
                app:icon="@drawable/round_check_24"
                app:iconGravity="textStart"
                app:iconPadding="8dp"

                android:backgroundTint="@color/pink_700"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
