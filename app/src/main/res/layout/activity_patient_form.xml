<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/backImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/searchInput"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/searchInput"
                app:tint="#C9C9C9" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Add New Beneficiary"
                android:textAlignment="center"
                android:textColor="@color/pink_700"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <!-- Title -->


        <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:text="General Information"
            android:textColor="@color/pink_700"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:hint=" Name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_person"
                        android:drawableTint="@color/other_700" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- ID -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint=" ID">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789"
                        android:drawableStart="@drawable/ic_badge"
                        android:inputType="number"
                        android:maxLength="12" />
                </com.google.android.material.textfield.TextInputLayout>


                <!-- Age -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint=" Age">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_cake"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Date field (clickable) -->
                <!-- Married switch -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchMarried"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Are You Married?" />

                <!-- Gender chips -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Beneficiary Sex"
                    android:textColor="@color/grey"
                    android:textStyle="bold" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    app:singleSelection="true"
                    app:chipSpacing="12dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMale"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Male"
                        android:textColor="@color/selector_chip_text"
                        app:chipBackgroundColor="@color/selector_chip_male"
                        app:chipIcon="@drawable/ic_male"
                        app:chipIconTint="@color/selector_chip_text"
                        app:iconStartPadding="6dp"
                        app:textStartPadding="4dp"
                        app:textEndPadding="8dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFemale"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Female"
                        android:textColor="@color/selector_chip_text"
                        app:chipBackgroundColor="@color/selector_chip_female"
                        app:chipIcon="@drawable/ic_female"
                        app:chipIconTint="@color/selector_chip_text"
                        app:iconStartPadding="6dp"
                        app:textStartPadding="4dp"
                        app:textEndPadding="8dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipOther"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="Other"
                        android:textColor="@color/selector_chip_text"
                        app:chipBackgroundColor="@color/selector_chip_other"
                        app:chipIcon="@drawable/ic_transgender"
                        app:chipIconTint="@color/selector_chip_text"
                        app:iconStartPadding="6dp"
                        app:textStartPadding="4dp"
                        app:textEndPadding="8dp" />

                </com.google.android.material.chip.ChipGroup>




                <com.google.android.material.textfield.TextInputLayout

                    android:id="@+id/etFatherLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint=" Father's Name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFather"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_person"
                        android:drawableTint="@color/other_700"  />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etHusbandLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:hint=" Husband's Name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHusband"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_group"  />
                </com.google.android.material.textfield.TextInputLayout>


                <!-- Husband name (hidden initially) -->
                <!-- Pregnant switch -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchPregnant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:text="Pregnant ?" />

                <!-- How far along -->
                <com.google.android.material.textfield.TextInputLayout

                    android:id="@+id/etMonthLayout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint=" How far along are you">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_pregnant"
                        android:drawableTint="@color/other_700"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Address -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint=" Address">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_home"
                        android:drawableTint="@color/other_700"
                        android:inputType="textMultiLine"
                        android:minLines="3" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Father's Name -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_button"
            android:drawableStart="@drawable/round_check_24"
            android:drawableTint="@color/white"
            android:text="Submit Data"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:backgroundTint="@null"
            app:icon="@drawable/round_check_24"
            app:iconTint="@color/white" />
    </LinearLayout>
</ScrollView>
